{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"allowImportingTsExtensions": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"isolatedModules": true
	},
	"include": ["src"]
}
